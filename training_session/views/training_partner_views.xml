<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Partner Form -->
    <record id="view_training_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.training.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <group string="Training Information">
                    <field name="is_instructor"/>
                    <field name="is_trainee"/>
                </group>
            </xpath>
        </field>
    </record>


    <!-- Trainee Tree -->
    <record id="view_trainee_tree" model="ir.ui.view">
        <field name="name">trainee.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Trainee">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>


    <!-- Instructor Tree -->
    <record id="view_instructor_tree" model="ir.ui.view">
        <field name="name">instructor.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Instructor">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>


    <!-- Action: Trainee -->
    <record id="action_trainee" model="ir.actions.act_window">
        <field name="name">Trainee</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_trainee_tree"/>
        <field name="domain">[('is_trainee','=',True)]</field>
    </record>


    <!-- Action: Instructor -->
    <record id="action_instructor" model="ir.actions.act_window">
        <field name="name">Instructor</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_instructor_tree"/>
        <field name="domain">[('is_instructor','=',True)]</field>
    </record>






















    <!-- Main Menu -->
    <menuitem id="master_data"
              name="Master Data"
              parent="product_validator.my_menu_root"/>


    <!-- Menu: Trainee -->
    <menuitem id="trainee_data"
              name="Trainee"
              parent="master_data"
              action="action_trainee"/>


    <!-- Menu: Instructor -->
    <menuitem id="instructor_data"
              name="Instructor"
              parent="master_data"
              action="action_instructor"/>

</odoo>
