<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom Tree View -->
    <record id="view_training_partner_tree" model="ir.ui.view">
        <field name="name">training.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Partners">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="is_instructor"/>
                <field name="is_trainee"/>
            </tree>
        </field>
    </record>

    <!-- Custom Form View -->
    <record id="view_training_partner_form" model="ir.ui.view">
        <field name="name">training.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Partner">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                    </group>

                    <group string="Training Information">
                        <field name="is_instructor"/>
                        <field name="is_trainee"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Custom Action -->
    <record id="action_training_partners" model="ir.actions.act_window">
        <field name="name">Training Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_training_partner_tree"/>
    </record>

    <!-- Custom Menu -->
    <menuitem id="menu_training_partners"
              name="Training Partners"
              parent="Training_module"
              action="action_training_partners"/>

</odoo>
