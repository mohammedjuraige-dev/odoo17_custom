<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_training_session_tree" model="ir.ui.view">
        <field name="name">training.session.tree</field>
        <field name="model">training.session</field>
        <field name="arch" type="xml">
            <tree string="Training Sessions">
                <field name="name"/>
                 <field name="instructor_ids" widget="many2many_tags"/>
                 <field name="trainee_ids" widget="many2many_tags" />
                <field name="trainee_count"/>
            </tree>
        </field>
    </record>

    <record id="view_training_session_form" model="ir.ui.view">
        <field name="name">training.session.form</field>
        <field name="model">training.session</field>
        <field name="arch" type="xml">
            <form string="Training Session">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="instructor_ids" widget="many2many_tags"/>
                        <field name="trainee_ids" widget="many2many_tags"/>
                        <field name="trainee_count"/>
                        <field name="attended_count"/>
                    </group>
                    <notebook>
                        <page string="Attendance Lines">
                            <field name="session_line_ids">
                                <tree editable="bottom" create="0">
                                    <field name="session_id"/>
                                    <field name="attendee_id"/>
                                    <field name="attended" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_training_session" model="ir.actions.act_window">
        <field name="name">Training Sessions</field>
        <field name="res_model">training.session</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <menuitem id="menu_training_session" name="Training Sessions" parent="Training_module" action="action_training_session"/>
</odoo>