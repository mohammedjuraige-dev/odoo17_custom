<odoo>
<!--    Tree-->
    <record id="view_training_session_line_tree" model="ir.ui.view">
        <field name="name">training.session.line.tree</field>
        <field name="model">training.session.line</field>
        <field name="arch" type="xml">
            <tree string="Attendee Tracker">
            <field name="session_id"/>
            <field name="attendee_id"/>
            <field name="attended"/>
            </tree>
        </field>
    </record>

<!--  Form  -->
        <record id="view_training_session_line_form" model="ir.ui.view">
        <field name="name">training.session.line.form</field>
        <field name="model">training.session.line</field>
        <field name="arch" type="xml">
            <form string="Attendee Tracker">
                <sheet>
                    <group>
                        <field name="session_id"/>
                        <field name="attendee_id" />

                       <field name="attended" />
                        <field name="notes"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>






    <record id="action_training_session_line" model="ir.actions.act_window">
        <field name="name">Training Sessions line</field>
        <field name="res_model">training.session.line</field>
        <field name="view_mode">tree,form</field>
    </record>

     <menuitem id="Training_module" name="Training module" parent="product_validator.my_menu_root"/>
    <menuitem id="menu_training_session_line" name="Training Session Line" parent="Training_module" action="action_training_session_line"/>

</odoo>







