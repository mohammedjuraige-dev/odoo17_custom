<odoo>

    <!-- Tree view for main model -->
    <record id="view_attendance_summary_tree" model="ir.ui.view">
        <field name="name">attendance.summary.tree</field>
        <field name="model">attendance.summary</field>
        <field name="arch" type="xml">
            <tree string="Attendance summary">
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="total_attendance_days"/>
                <field name="late_days"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="view_attendance_summary_form" model="ir.ui.view">
        <field name="name">attendance.summary.form</field>
        <field name="model">attendance.summary</field>
        <field name="arch" type="xml">
            <form string="Attendance Summary">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state=='confirmed'"/>
                            <field name="date_from" readonly="state=='confirmed'"/>
                            <field name="date_to" readonly="state=='confirmed'"/>
                        </group>
                        <group>
                            <field name="total_attendance_days" readonly="1"/>
                            <field name="late_days" readonly="1"/>
                            <field name="threshold_time" readonly="1"/>
                        </group>
                    </group>

                    <notebook id="notebook">
                        <page string="Attendance Details">

                            <field name="attendance_ids" readonly="1">
                                <tree create="0" delete="0" edit="0">
                                    <field name="employee_id"/>
                                    <field name="check_in" widget="datetime"/>
                                    <field name="late_minutes" widget="float_time"/>
                                </tree>

                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_attendance_summary" model="ir.actions.act_window">
        <field name="name">Attendance Summary</field>
        <field name="res_model">attendance.summary</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item -->
    <menuitem id="attendance_summary_menu" name="Attendance Summary"
              parent="broadtech_training.menu_broadtech_training_root"
              action="action_attendance_summary"/>

</odoo>