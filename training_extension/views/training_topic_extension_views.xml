<odoo>


        <!--    Form-->
        <record id="view_training_extension_form" model="ir.ui.view">
        <field name="name">training.extension.form</field>
        <field name="model">training.topic</field>
      <field name="inherit_id" ref="broadtech_training.view_training_topic_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="after">
             <notebook>
                <page string="Advanced Settings">
                    <group>
                       <field name="estimated_hours"/>
                       <field name="is_advanced"/>
                    </group>
                </page>
             </notebook>
            </xpath>


        </field>
        </record>










</odoo>