<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        Cron Job: Calculate Late Time for First Check-ins
        Runs every 5 minutes
        -->
        <record id="ir_cron_late_time_calculation" model="ir.cron">
            <field name="name">Late Time Calculation (5 min)</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">
# Calculate late time for first check-ins
model.cron_calculate_late_time()
            </field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="priority">10</field>
        </record>
    </data>
</odoo>