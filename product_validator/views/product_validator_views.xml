<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree/List View -->
    <record id="view_product_validator_tree" model="ir.ui.view">
        <field name="name">product.validator.tree</field>
        <field name="model">product.validator</field>
        <field name="arch" type="xml">
            <tree string="Product Validator">

                <field name="name"/>
                <field name="quantity"/>
                <field name="is_valid" widget="boolean_button"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_product_validator_form" model="ir.ui.view">
        <field name="name">product.validator.form</field>
        <field name="model">product.validator</field>
        <field name="arch" type="xml">
            <form string="Product Validator">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Enter product name..."/>
                            <field name="quantity" placeholder="Enter product quantity"/>
                        </group>
                        <group>
                            <field name="is_valid"
                                   readonly="1"
                                   string="Validation Status"
                                   help="Green checkmark indicates valid data"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Action -->
    <record id="action_product_validator" model="ir.actions.act_window">
        <field name="name">Product Validator</field>
        <field name="res_model">product.validator</field>
        <field name="view_mode">tree,form</field>

    </record>

    <!-- Main Menu Item -->
    <menuitem
        id="my_menu_root"
        name="Modules"
        sequence="10"
    />
      <menuitem
        id="product_validator"
        name="product validator menu"
        parent="my_menu_root"
        action="action_product_validator"
        sequence="10"
    />







</odoo>


